@model RuTour.Models.TourContext
@{
    ViewData["Title"] = "RuTour";
}

<section class="hero-area set-bg" data-setbg="img/manaraga-toned.jpg"
         style="height: 650px; background-position-y: -50px;">
</section>

<section class="search-filter">
    <div class="container" style="padding: 50px 20px; background-color: #00000099;">
        <div class="row">
            <div class="col-lg-12">
                <form action="#" class="d-md-flex justify-content-between" style="padding: 10px;">
                    <h4 style="position: absolute; top: -30px; color: white;">Поиск</h4>

                    <div>
                        <h4 style="margin: 5px; color: white;">Город</h4>
                        <input type="text" list="cities" style="border-radius: 5px; border: 0; height: 42px; padding: 0 10px;" placeholder="Город" onfocus="this.value='';" onchange="this.blur()" />
                        <datalist id="cities">
                            @foreach (var element in Model.Cities)
                            {
                                <option>@element.Name</option>
                            }
                        </datalist>
                    </div>

                    <div>
                        <h4 style="margin: 5px; color: white;">Дата</h4>
                        <input type="date" style="border-radius: 5px; border: 0; height: 42px; padding: 0 15px;">
                    </div>

                    <div class="single_field">
                        <h4 style="margin: 5px; color: white;">Количество ночей</h4>
                        <input type="number" min="0" step="1" style="border-radius: 5px; border: 1px solid #444; height: 42px;
                                                padding: 0 10px;" placeholder="Количество ночей" />
                    </div>

                    <div class="single_field">
                        <h4 style="margin: 5px; color: white;">Максимальная цена</h4>
                        <input type="number" min="1" step="any" style="border-radius: 5px; border: 1px solid #444; height: 42px;
                                                padding: 0 10px;" placeholder="Максимальная цена" />
                    </div>

                    <button class="boxed-btn3" style="margin-top: 32px; height: 42px; width: 150px; line-height: 15px;" type="submit">Найти</button>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="job_listing_area plus_padding" style="padding-top: 30px;">
    <div class="container">
        <div class="row">
            <!-- Фильтры -->
            <div class="col-lg-3" style="margin-top: 87px;">
                <div class="job_filter white-bg" style="border-radius: 10px; box-shadow: 0px 0px 1px 0px #777;">
                    <div class="form_inner white-bg">
                        <h3>Фильтры</h3>
                        <form action="#">
                            <div class="row">

                                <div class="col-lg-12">
                                    <div class="single_field">
                                        <input type="text" placeholder="Введите название" onfocus="this.value=''">
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="single_field">
                                        <input type="text" list="cities" style="border-radius: 5px; border: 1px solid #888; height: 42px; padding: 0 10px;" placeholder="Город" onfocus="this.value='';" onchange="this.blur()" />
                                        <datalist id="cities">
                                            @foreach (var element in Model.Cities)
                                            {
                                                <option>@element.Name</option>
                                            }
                                        </datalist>
                                    </div>

                                    <div class="single_field">
                                        <input type="text" list="companies" style="border-radius: 5px; border: 1px solid #888; height: 42px; padding: 0 10px;" placeholder="Компания" onfocus="this.value='';" onchange="this.blur()" />
                                        <datalist id="companies">
                                            @foreach (var element in Model.Companies)
                                            {
                                                <option>@element.Name</option>
                                            }
                                        </datalist>
                                    </div>

                                    <div class="single_field">
                                        <input type="date" style="border-radius: 5px; border: 1px solid #888; height: 42px; padding: 0 15px;">
                                    </div>

                                    <div class="single_field">
                                        <input type="number" min="0" step="1" style="border-radius: 5px; border: 1px solid #888; height: 42px;
                                                padding: 0 10px;" placeholder="Количество ночей" />
                                    </div>

                                    <div class="single_field">
                                        <input type="text" list="transport" style="border-radius: 5px; border: 1px solid #888; height: 42px;
                                                padding: 0 10px;" placeholder="Транспорт" onfocus="this.value='';" onchange="this.blur()" />
                                        <datalist id="transport">
                                            @foreach (var element in Model.Transports)
                                            {
                                                <option>@element</option>
                                            }
                                        </datalist>
                                    </div>

                                    <div class="single_field">
                                        <input id="return_input" type="text" list="return-list" style="border-radius: 5px; border: 1px solid #888; height: 42px;
                                                padding: 0 10px;" placeholder="Билет обратно" onfocus="this.value='';" onchange="this.blur()" />
                                        <datalist id="return-list">
                                            <option>Нет</option>
                                            <option>Есть</option>
                                        </datalist>
                                    </div>

                                    <div class="range_wrap">
                                        <label for="amount">Стоимость:</label>
                                        <div id="slider-range"></div>
                                        <p>
                                            <input type="text" id="amount" style="border:0; color:#7A838B; font-size: 14px; font-weight:400;" readonly>
                                        </p>
                                    </div>

                                    <div class="reset_btn">
                                        <button class="boxed-btn3 w-100" style="height: 50px; line-height: 25px;" type="submit">Найти</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-9">
                <!-- Сортировка -->
                <div class="recent_joblist_wrap">
                    <div class="recent_joblist white-bg" style="background-color: transparent;">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h4 style="font-size: 30px; margin-left: -20px;">Список туров</h4>
                            </div>
                            <div class="col-md-6" style="margin-bottom: -20px;">
                                <div class="serch_cat d-flex justify-content-end" style="margin-right: -20px;">
                                    <select style="border: 0; background-color: transparent;">
                                        <option data-display="Most Recent">Сортировка</option>
                                        <option value="1">По минимальной цене</option>
                                        <option value="2">По максимальной цене </option>
                                        <option value="3">По новизне </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Список туров -->
                <div class="job_lists m-0">
                    <div class="row">
                        @foreach (var element in Model.Tours)
                        {
                            <div class="col-lg-12 col-md-12">
                                <div class="single_jobs white-bg d-flex justify-content-between">
                                    <div class="jobs_left d-flex align-items-center">
                                        <div class="jobs_conetent">
                                            <a href="~/Home/Tour/@element.Id">
                                                <h4 style="font-size: 30px;">@element.Title</h4>
                                            </a>
                                            <div class="links_locat d-flex align-items-center" style="margin-top: 35px;">
                                                <div class="location">
                                                    <p> <i class="fa fa-map-marker"></i>Город @element.City.Name</p>
                                                </div>
                                                <div class="location">
                                                    <p> <i class="fa fa-clock-o"></i>Дата @element.Date.ToShortDateString()</p>
                                                </div>
                                                <div class="location">
                                                    <p> <i class="fa fa-clock-o"></i>Ночей @element.NightsCount</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="jobs_right">
                                        <div class="apply_now">
                                            <a href="~/Home/Tour/@element.Id" class="boxed-btn3" style="font-size: 20px;">Узнать больше</a>
                                        </div>
                                        <div class="date">
                                            <p style="font-size: 16px;">Стоимость @element.Cost руб</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
