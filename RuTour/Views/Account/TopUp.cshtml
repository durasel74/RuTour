@model RuTour.Models.User
@{
    ViewData["Title"] = "RuTour - пополнение счета";
}

<div class="job_details_area" style="margin-top: 70px;">
    <div class="container">
        <div class="row">
            <div class="container-fluid">
                <div class="descript_wrap white-bg" style="border-radius: 10px; height: 500px">
                    <h4 style="font-size: 30px; margin-bottom: 20px;">Пополнение счета</h4>
                    <hr />
                    <p style="font-size: 18px; color: #111">@Model.Email</p>
                    <p style="font-size: 16px; margin-top: -15px; color: #111">Баланс: <span>@Model.Cash</span> руб.</p>
                    <form action="~/Account/TopUp" method="post">
                        <input name="cash" placeholder="Сумма"/>
                        <br />
                        <input style="margin-top: 10px" type="submit" value="Пополнить"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
